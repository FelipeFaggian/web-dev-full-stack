chessChallenge

function main(){
     forward();
     forward();
     left();
     forward();
     right();
     forward();
     forward();
     left();
     forward();
     right();
     forward();
     forward();
     putBeeper();
}

function forward() {
      putBeeper();
      move();
      move();
}
   
function left() {
   putBeeper();
   repeat(2) {
   turnLeft();
   move();
   }
}  

function right() {
   putBeeper();
   repeat(2) {
   move();
   turnRight();
   }
}
