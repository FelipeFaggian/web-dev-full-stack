/**
 * Welcome to the Stanford Karel IDE.
 * This is a free space for you to 
 * write any Karel program you want.
 **/
function main(){   
   repeat(5) {
      nextStep();
   }
}

function nextStep() {
   putBeeper();
   move();
   turnLeft();
   move();
   turnRight();
}
