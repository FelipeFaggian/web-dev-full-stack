<html lang="en"><head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>Login</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/floating-labels/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="floating-labels.css" rel="stylesheet">

     <!-- Top Config -->
     <%- include('partials/config/headConfig.ejs') %>
  </head>

  <body>
    <div class="">  
      <form class="form-signin d-flex justify-content-around pt-5" action="/login" method="POST">
        <a href="/"><button type="button" class="btn btn-lg btn-dark">Home</button></a>
        <!-- User Icon-->
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle ms-3" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
        </svg>
        <a href="/signUp"><button type="button" class="btn btn-lg btn-dark">Sign-Up</button></a>
      </div>

      <!-- Warnings -->
      <div class="text-center">
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <p>Please, fill the camps below to login!</p>
      </div>

      <div class="form-label-group col-6 mx-auto py-3 pb-4">
        <label for="inputEmail" class="pt-2 text-danger"> <%= checkEmailLogin %> </label>
        <input name="loginEmail" id="inputEmail" class="form-control" placeholder="Type your e-mail." required="" autofocus="">
        <label for="inputEmail" class="pt-2">Email address</label>
      </div>

      <div class="form-label-group col-6 mx-auto">
        <label for="inputPassword" class="pt-2 text-danger"> <%= checkPasswordLogin %> </label>
        <input name="loginPassword" id="inputPassword" class="form-control" placeholder="Type your password." required="">
        <label for="inputPassword" class="pt-2">Password</label>
      </div>

      <div class="text-center">
        <button class="btn btn-lg btn-dark" type="submit">Sign in</button>
        <p class="mt-3 text-muted">Â© 2017-2018</p>
      </div>
    </form>

    <!--Bottom Config -->
    <%- include('partials/config/endBodyConfig.ejs')%>

</body></html>